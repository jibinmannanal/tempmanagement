<p id="notice"><%= notice %></p>

<h1>Donations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Amount</th>
      <th>Received by</th>
      <th>Purpose</th>
      <th>Payment type</th>
      <th>Payment method</th>
      <th>Check no</th>
      <th>Check expiry date</th>
      <th>Transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.name %></td>
        <td><%= donation.address %></td>
        <td><%= donation.amount %></td>
        <td><%= donation.received_by %></td>
        <td><%= donation.purpose %></td>
        <td><%= donation.payment_type %></td>
        <td><%= donation.payment_method %></td>
        <td><%= donation.check_no %></td>
        <td><%= donation.check_expiry_date %></td>
        <td><%= donation.transaction_id %></td>
        <td><%= link_to 'Show', donation %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
        <td><%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_donation_path %>
