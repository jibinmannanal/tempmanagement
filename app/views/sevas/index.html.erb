<p id="notice"><%= notice %></p>

<h1>Sevas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Instructions</th>
      <th>Rate</th>
      <th>Identification number</th>
      <th>Status</th>
      <th>Audit logs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sevas.each do |seva| %>
      <tr>
        <td><%= seva.name %></td>
        <td><%= seva.instructions %></td>
        <td><%= seva.rate %></td>
        <td><%= seva.identification_number %></td>
        <td><%= seva.status %></td>
        <td><%= seva.audit_logs %></td>
        <td><%= link_to 'Show', seva %></td>
        <td><%= link_to 'Edit', edit_seva_path(seva) %></td>
        <td><%= link_to 'Destroy', seva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

